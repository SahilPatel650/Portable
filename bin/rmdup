#!/bin/bash

dir="$PWD"
pname="$(basename "$PWD")"
pfile="$(echo "$PWD" | cut -d'/' -f-4)/playlists/$pname.m3u"
echo "#EXTM3U" > "$pfile"

playlistItems="$(ls)"

fullpaths="$(find /Users/Sahil/Music/Music -type f -regex ".*\.m4a")"
fullpaths="${fullpaths}\n" "$(find /Users/Sahil/Music/Music -type f -regex ".*\.mp3")"
#echo "$fullpaths"

while IFS="" read -r p || [ -n "$p" ]
do
    libItem="$(basename "$p")"
    while read songExt
    do
        song="${songExt%.*}"
        #echo "$song .... $p"

        if [[ "$libItem" ==  *"$song"* ]]
        then
            #echo "$songExt and $p are a match"
            echo "$p" >> "$pfile"
            echo "removing $songExt"
            #rm "$songExt"
        fi
    done <<< "$playlistItems"
done <<< "$fullpaths"

open "$(echo "$dir" | cut -d'/' -f-4)/playlists"